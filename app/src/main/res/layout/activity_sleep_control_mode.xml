<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <VideoView
        android:id="@+id/back_video"
        android:layout_width="900dp"
        android:layout_height = "wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/wakeup"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:text="aaaaaaaaaaaaa"
        android:textStyle="bold"
        android:textSize="34sp"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        />
    <Button
        android:id="@+id/backToMenuSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="В меню"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="28dp" />

    <TextView
        android:id="@+id/littleInf"
        android:layout_width="215dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="28dp"
        android:layout_toEndOf="@+id/backToMenuSleep"
        android:text="Вы можете изменить звук в блоке 'Дополнительное' в Главном Меню"
        android:textColor="@color/white"
        android:textSize="11sp" />
</RelativeLayout>